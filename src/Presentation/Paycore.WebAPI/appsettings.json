{
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft.AspNetCore": "Error"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "PostgreSql": "User ID=postgres;Password=123456;Server=localhost;Port=5432;Database=postgres;Integrated Security=true;Pooling=true;"
  },
  "PayCoreSettings": {
    "RedisSettings": {
      "Host": "127.0.0.1",
      "Port": "6379",
      "SlidingExpirationHours": 15,
      "AbsoluteExpirationHours": 15
    },
    "SmtpSettings": {
      "Port": "587",
      "Host": "smtp.gmail.com",
      "Email": "Mail Adresi yazýnýz",
      "Password": "Þifre yazýnýz"
    },
    "JwtSettings": {
      "Audience": "paycore",
      "Issuer": "paycore",
      "Key": "paycorepaycorepaycorepaycorepaycorepaycorepaycore",
      "TokenExpirationMinute": 30
    },
    "RabbitMqSettings": {
      "Host": "localhost"
    }
  },
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\paycore-log\\logs.log",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
        }
      }
    ],
    "Properties": {
      "ApplicationName": "PayCore"
    }
  }
}
